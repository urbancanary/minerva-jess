# Minerva-Jess Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED: Anthropic API Key
# =============================================================================
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-key-here

# =============================================================================
# Minerva MCP Connection
# =============================================================================
# URL of the Minerva MCP server
MINERVA_MCP_URL=http://localhost:3000

# Authentication token for Minerva MCP (if required by your deployment)
MINERVA_MCP_TOKEN=

# =============================================================================
# Model Configuration (Optional)
# =============================================================================
# Claude model for synthesizing answers
# Options: claude-haiku-4-5, claude-sonnet-4-5, claude-opus-4-5
SYNTHESIS_MODEL=claude-haiku-4-5

# Maximum tokens for synthesized answers
MAX_SYNTHESIS_TOKENS=1024

# =============================================================================
# Search Configuration (Optional)
# =============================================================================
# Maximum number of video segments to return
MAX_SEARCH_RESULTS=10

# Minimum relevance score (0.0 - 1.0) for results
MIN_RELEVANCE_SCORE=0.0

# =============================================================================
# Logging (Optional)
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
